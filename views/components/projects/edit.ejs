<% layout('layout/boilerplate') %>

    <div class="row my-5">
        <div class="col-md-6 offset-md-3">
            <form action="/projects/<%= project._id  %>?_method=PUT" method="post">
                <div class="mb-3">
                    <label for="title" class="form-label">Project title</label>
                    <input value="<%= project.title  %>" id="title" type="text" class="form-control" name="title">
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image</label>
                    <input value="<%= project.image  %>" id="img" type="url" class="form-control" name="image">
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="description" style="height: 100px"
                        name="description"><%= project.description  %></textarea>
                    <label for="description">Project description</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="technologies" style="height: 100px"
                        name="technologies"><%= project.technologies  %></textarea>
                    <label for="technologies">Technologies</label>
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" id="text" style="height: 100px"
                        name="text"> <%= project.text %></textarea>
                    <label for="text">Text</label>
                </div>
                <div class="mb-3">
                    <label for="link" class="form-label">Link</label>
                    <input value="<%= project.link  %>" id="link" type="text" class="form-control" name="link">
                </div>
                <div class="mb-3">
                    <label for="repository" class="form-label">Git repository</label>
                    <input value="<%= project.repository %>" id="repository" type="text" class="form-control"
                        name="repository">
                </div>
                <button type="submit" class="btn btn-primary mb-4">Submmit</button>
            </form>
        </div>
    </div>