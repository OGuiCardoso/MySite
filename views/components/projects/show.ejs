<% layout('layout/boilerplate') %>

    <div class="d-flex flex-column justify-content-center my-5 ">
        <section class="mx-5">
            <div class="d-flex justify-content-center mb-5">
                <img src="<%= project.image %>" class="img-fluid mx-auto" alt="...">
            </div>
            <div class="d-flex justify-content-center mb-5">

                <h5 class="">
                    <%= project.title %>
                </h5>
            </div>

            <p>
                <%=project.description %>
            </p>
            <p>
                <%= project.text %>
            </p>
            <a href="#" class="btn btn-primary mb-3">view</a>
            <% if(user) {%>
                <form action="/projects/<%=project._id  %>?_method=DELETE" method="POST"><button
                        class="btn btn-danger">Delete</button></form>
                <% } %>
        </section>
    </div>