<% layout('layout/boilerplate') %>

    <h1>projects page</h1>

    <div class=" row row-cols-2 justify-content-center">
        <% for(let p of projects){ %>
            <div class="card col mx-3 my-3" style="width: 18rem;">
                <img src="<%= p.image.url %>" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">
                        <%=p.title%>
                    </h5>
                    <p class="card-text">
                        <%=p.description%>
                    </p>
                    <a href="/projects/<%=p._id%>" class="btn btn-primary">See more</a>
                </div>
            </div>
            <% } %>
    </div>